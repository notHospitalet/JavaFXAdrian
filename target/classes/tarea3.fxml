<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.Controller3">
    <HBox spacing="10">
        <VBox spacing="5">
            <Label text="Nombre"/>
            <TextField fx:id="txtNombre"/>
            <Label text="Apellidos"/>
            <TextField fx:id="txtApellidos"/>
            <Label text="Edad"/>
            <TextField fx:id="txtEdad"/>
            <Button text="Agregar persona" onAction="#agregarPersona"/>
        </VBox>
        <TableView fx:id="tablaPersonas">
            <columns>
                <TableColumn fx:id="columnaNombre" text="Nombre"/>
                <TableColumn fx:id="colApellidos" text="Apellidos"/>
                <TableColumn fx:id="columnaEdad" text="Edad"/>
            </columns>
        </TableView>
    </HBox>
</VBox>